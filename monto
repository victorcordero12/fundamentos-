// promedio2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float m,d;
	d=0;
	cout<< "introduce el monto:"<<endl;
	cin>> m;
	if (m>0&&m<=500)
	{
		d=m*0.0;
	
	}else  {
	       if(m>501&&m<=1000)
		   { 
			   d=m*0.05;
		   } else{
			   if(m>1001&&m<=2000)
			   {
				   d=m*0.10;
			   } else{
				   if(m>=2001)
				   {
					   d=m*0.20;
				   }
			   }
		   }
	}
	cout<<"el resultado:"<<endl;
	cout<<m-d;
	getch();
}
