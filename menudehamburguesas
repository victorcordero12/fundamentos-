// menu.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{ 
	float costo=0;
	int opcion,cantidad;
	cout<<"ingrese la cantidad";
	cin>> cantidad;
	cout<<"selecione su pedido:";
	cout<< "/n/t MENU"<<endl;
	cout<< "/n/t===";
	cout<< "1.hamburguesas"<<endl;
	cout<<"2.hamburguesas con queso"<<endl;
	cout<<"3.papas fritas"<<endl;
	cout<<"4.soda"<<endl;
	cout<<"ingrese la opcion";
	cin>>opcion;
	switch (opcion)
	{
	case 1: costo=3;break;
	case 2: costo=5;break;
	case 3: costo=2;break;
	case 4: costo=2.5;break;
	default:cout<< "opcion invalida:"<<endl;
	}
	cout<<"el costo es:"<<costo*cantidad;
	getch();
}
