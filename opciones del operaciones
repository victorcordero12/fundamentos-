// ConsoleApplication1.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include  <iostream>
#include  "conio.h"
using namespace std;
void main()
{
	float a, b, r;
	char op;
	cout << "ingrese el valor de a:" << endl;
	cin >> a;
	cout << "ingrese el valor de b:" << endl;
	cin >> b;
	cout << "introducir el operador, +,-,*,/:" << endl;
	cin >> op;
	r = 0;
	switch (op)
	{
	case '+' : r = a + b; break;
	case '-' : r = a - b; break;
	case '*' : r = a * b; break;
	case '/' : r = a / b; break;
	default: cout << "operador invalido" << endl;
	}
	cout << "el resultaldo es:" << endl;
	cout << r;
	system("pause");

}
