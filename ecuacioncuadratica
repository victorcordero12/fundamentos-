// e.cuadratica.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()

{
	float a,b,c,x1,x2,D;
	cout<<"ingrese el valor de a:"<<endl;
		cin>>a;
	cout<<"ingrese el valor de b:"<<endl;
		cin>>b;
	cout<<"ingrese el valor de c:"<<endl;
		cin>>c;
	if (a!=0)
	 {
	   D=b*b-4*a*c;
		if (D>0)
		//ingrese por verdad
		{
		    x1=(-b+sqrt(D))/(2*a);
		    x2=(-b-sqrt(D))/(2*a);
			cout<<"soluciones reales x1:"<<x1<<"X2:"<<x2;
		}
		else
		//ingrese por falso
		if(D==0)
		
		cout<<"solucion unica:"<<(-b)/(2*a);
		else
	    cout<<"soluciones imaginarias";
		}
	     getch();
}
